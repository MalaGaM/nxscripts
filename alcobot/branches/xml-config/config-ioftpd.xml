    <!--
    #### Sections
    #
    # chan_section
    # path_section
    #  - name
    #  - path
    #  - channels
    #  - flags
    #
    -->
    <sections>
        <!-- Channel sections. -->
        <chan_section>
            <name>DEFAULT</name>
            <channels>
                <channel>#Alc</channel>
            </channels>
            <flags>
                +approve +close +credits +request
            </flags>
        </chan_section>
        <chan_section>
            <name>STAFF</name>
            <channels>
                <channel>#AlcStaff</channel>
            </channels>
            <flags>
                +error +login +sysop +wipe
            </flags>
        </chan_section>

        <!-- Path sections. -->
        <path_section>
            <name>0DAY</name>
            <path>/0DAY/</path>
            <channels>
                <channel>#AlcSpam</channel>
            </channels>
            <flags>
                +COMPLETE -wipe -zipscript +pretime=60 +all
