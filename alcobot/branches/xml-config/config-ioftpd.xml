<config>
    <!--
    #### General
    #
    # cmd_prefix
    # site_name
    # site_tag
    #
    # debug_mode
    # local_time
    # modules
    # theme_file
    #
    -->
    <general>
        <cmd_prefix>!alc</cmd_prefix>
        <site_name>Alcoholicz</site_name>
        <site_tag>ALC</site_tag>

        <debug_mode>False</debug_mode>
        <local_time>True</local_time>
        <theme_file>themes/ioftpd.xml</theme_file>
        <modules>
            <module>bouncer</module>
            <module>ftpd</module>
            <module>free</module>
            <module>groups</module>
            <module>help</module>
            <module>invite</module>
            <module>online</module>
            <module>pretimes</module>
            <module>readlogs</module>
            <module>sitecmd</module>
        </modules>
    </general>

    <!--
    #### FTPD
    #
    # type
    # delete
    # window
    #
    # host
    # port
    # user
    # pass
    # secure
    #
    -->
    <ftpd>
        <type>ioftpd</type>
        <delete>6</delete>
        <window>ioFTPD::MessageWindow</window>

        <host>127.0.0.1</host>
        <port>21</port>
        <user>!sitebot</user>
        <pass>sitebot</pass>
        <secure>tls</secure>
    </ftpd>

    <!--
    #### Commands
    #
    # channel_command
    # private_command
    #  - name
    #  - prefix
    #  - target
    #  - flags
    #
    -->
    <commands>
