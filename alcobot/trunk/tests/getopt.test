################################################################################
# GetIndexFromList                                                             #
################################################################################

test getopt-1.1 {GetIndexFromList: no args} {
    list [catch {GetIndexFromList} msg] $msg
} {1 {wrong # args: should be "GetIndexFromList list element"}}

test getopt-1.2 {GetIndexFromList: exact match} {
    GetIndexFromList {zero one two three four} two
} {2}

test getopt-1.3 {GetIndexFromList: no exact match} {
    GetIndexFromList {zero one two three four} .
} {-1}

test getopt-1.4 {GetIndexFromList: unique partial match} {
    GetIndexFromList {zero one two three four} thr
} {3}

test getopt-1.5 {GetIndexFromList: no unique partial match} {
    GetIndexFromList {zero one two three four} t
} {-1}

